{
    "extends": "@tsconfig/node16/tsconfig.json",
    "include": [
      "./src/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ],
    "compilerOptions": {
      "module": "es2022",
      "typeRoots": [
        "./types",
        "node_modules/@types"
      ],
      "moduleResolution": "node",
      "outDir": "./lib",
      "esModuleInterop": true
    }
  }
